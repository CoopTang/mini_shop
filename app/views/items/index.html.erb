<h1>All Items</h1>

<% @items.each do |item| %>
  <p>
    <%= item.name %>
    <ul>
      <li><%= item.description %></li>
      <li><%= item.price %></li>
      <li><%= item.image %></li>
      <li><%= item.active %></li>
      <li><%= item.inventory %></li>
      <li><%= item.merchant.name %></li>
    </ul>
  </p>
<% end %>